{
  "manifest_version": 2,

  "name": "planSort",
  "description": "Приложение для сортировки планов",
  "version": "2.0.1",
  "icons": { 
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png" 
  },
  "content_scripts": [
      {
        "matches": [
            "https://staff.megagroup.ru/staff/*",
            "http://staff.oml.ru/staff/client/*"
        ],
        "js": [
            "jquery.min.js",
            "jquery-ui.min.js",
            "app.min.js"
        ],
        "run_at": "document_end",
        "css": ["styles.min.css"]
      }
    ]
}
